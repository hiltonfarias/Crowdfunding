@model IEnumerable<Crowdfunding.Domain.ViewModels.DonorViewModel>
@using System.Globalization

@{
    ViewData["Title"] = "Donors";
}
<div class="text-center">
    <h3>See who has donated!</h3>
    <hr/>
</div>

<table class="table table-striped table-bordered text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupportMessage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeDescription)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SupportMessage)
                    </td>
                    <td>
                        <span>@item.Value.ToString("C", CultureInfo.CreateSpecificCulture("pt-BR"))</span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TimeDescription)
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">
                    <center><span class="text-center">There have been no donations yet. Be the first!</span></center>
                </td>
            </tr>
        }
    </tbody>
</table>